  "devDependencies": {
    "@types/node": "^14.6.4",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "^7.8.1",
    "homebridge": "^1.1.6",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
